<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>AppInitializer</servlet-name>
  	<display-name>AppInitializer</display-name>
  	<description></description>
  	<servlet-class>app.AppInitializer</servlet-class>
  	<load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
  	<servlet-name>InitializeDB</servlet-name>
  	<display-name>InitializeDB</display-name>
  	<description></description>
  	<servlet-class>app.InitializeDB</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>GetSchemaDetails</servlet-name>
  	<display-name>GetSchemaDetails</display-name>
  	<description></description>
  	<servlet-class>app.GetSchemaDetails</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AppInitializer</servlet-name>
  	<url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>InitializeDB</servlet-name>
  	<url-pattern>/initialize_db</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>GetSchemaDetails</servlet-name>
  	<url-pattern>/get_schema_details</url-pattern>
  </servlet-mapping>
</web-app>